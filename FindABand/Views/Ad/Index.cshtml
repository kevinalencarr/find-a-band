@model IEnumerable<Ad>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>These bands are looking for you!</h1>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                    <img class="card-img-top" src="@item.Image" widht="100%" alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text">@item.Title</p>
                        <p class="card-text">@item.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a type="btn btn-success" asp-controller="Band" asp-action="Detail" asp-route-id="@item.Id"
                                class="btn btn-sm btn-outline-secondary">View</a>
                            <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                        </div>
                        <small class="text-muted">@item.AdCategory</small>
                        </div>
                    </div>
                    </div>
                </div>
            }
        
        </div>
    </div>
</div>
